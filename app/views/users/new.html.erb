<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: signup_path do |f| %>
      <%= render "shared/error_messages" %>

      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control", placeholder: "Enter your Full Name" %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control", placeholder: "Enter a valid e-mail address" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control", placeholder: "Enter a secure password" %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Type your password again" %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>